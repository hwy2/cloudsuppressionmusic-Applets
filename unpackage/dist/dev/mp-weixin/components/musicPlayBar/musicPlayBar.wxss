.playBar {
  position: fixed;
  bottom: 0;
  bottom: constant(safe-area-inset-bottom);
  /* 兼容 iOS < 11.2 */
  bottom: env(safe-area-inset-bottom);
  /* 兼容 iOS >= 11.2 */
  z-index: 998;
  height: 108rpx;
  width: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  border-top: 1px solid #f0f0f0;
  background-color: #fff;
}
.playBar .left {
  -webkit-box-flex: 8;
  -webkit-flex: 8;
          flex: 8;
  height: 100%;
  box-sizing: border-box;
  padding-left: 10rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
