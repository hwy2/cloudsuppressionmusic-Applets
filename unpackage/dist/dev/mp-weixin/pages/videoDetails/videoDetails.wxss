.videoDetails {
  height: 100vh;
}
.videoDetails .videoMain {
  width: 100%;
  height: 100%;
}
.videoDetails .videoMain .videoPlay {
  width: 100%;
  touch-action: none;
  height: 34.9vh;
}
.videoDetails .videoMain .videoPlay video {
  width: 100%;
  height: 100%;
  background: #000;
}
.videoDetails .videoMain .videosub {
  background-color: #fff;
  height: 65.1%;
}
.videoDetails .videoMain .videosub .levelNavigation {
  height: 8%;
}
.videoDetails .videoMain .videosub .levelNavigation scroll-view {
  height: 75rpx;
  background-color: #fff;
  box-shadow: 0 20rpx 10rpx #f8f8f8;
